# ---- Cloudflare Tunnel basics ----
TUNNEL_NAME=homecloud
# Filled by ./run.sh bootstrap
TUNNEL_ID=
HOSTNAME=cloud.demonsmp.win

# NAS origin
NAS_IP=192.168.2.10
DSM_PORT=5001

# ---- Colima VM (headless Docker) ----
# Set COLIMA_ENABLE=false to skip Colima handling
COLIMA_ENABLE=true
COLIMA_PROFILE=default
COLIMA_CPUS=1
COLIMA_MEMORY=1GiB
COLIMA_DISK=10GiB
# On Apple Silicon, prefer Apple's hypervisor:
COLIMA_VM_TYPE=vz   # fallback is qemu if vz not available

# ---- Cloudflared runtime niceties ----
CF_LOGLEVEL=info
METRICS_PORT=49383   # exposes /metrics on host:38383